<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="?android:listPreferredItemHeightLarge"
    android:gravity="center_vertical"
    android:id="@+id/list_item_indivual_track" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/list_item_track_thumbnail" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="?android:listPreferredItemHeight"
                android:layout_marginLeft="16dp"
                android:text="Track title"
                android:id="@+id/list_item_track_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="?android:listPreferredItemHeight"
                android:layout_marginLeft="16dp"
                android:text="Album title"
                android:id="@+id/list_item_track_album" />

        </LinearLayout>

    </LinearLayout>